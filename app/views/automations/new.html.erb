<% flash.each do |type, msg| %>
    <div class="alert alert-info">
        <%= msg %>
        <%= render partial: 'errors/errors', locals: {model: @automation} %>
    </div>
<% end %>
<center>
<div class="card" style="width: 30rem;">
<div class="card-body">
<h1>New Automation</h1>
<%= form_with(model: [:device, @automation]) do |f| %>
    <%= f.label "Name:" %>
    <%= f.text_field :name %><br>
    <%= f.label "Start Time:" %>
    <%= f.collection_select :if_action, @times, :to_s, :to_s, include_blank: false %><br>
    <%= f.label "Action: "%>
    <%= f.text_field :then_action %><br>
    <%= f.label "Room:" %>
    <%= f.text_field :room_name %><br>
    <%= f.submit 'Create Automation' %>
<% end %>
</div>
</div>
</center>