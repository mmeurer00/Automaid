<% flash.each do |type, msg| %>
    <div class="alert alert-info">
        <%= msg %>
        <%= render partial: 'errors/errors', locals: {model: @automation} %>
    </div>
<% end %>
<center>
<div class="card" style="width: 30rem;">
<div class="card-body">
<h1>New Automation</h1>
<%= form_with(model: [:device, @automation]) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :if_action %>
    <%= f.text_field :if_action %><br>
    <%= f.label :then_action %>
    <%= f.text_field :then_action %><br>
    <%= f.label :room_name %>
    <%= f.text_field :room_name %><br>
    <%= f.submit 'Create Automation' %>
<% end %>
</div>
</div>
</center>