<h1>New Automation</h1>
<%= form_for(@automation) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :if_action %>
    <%= f.text_field :if_action %><br>
    <%= f.label :then_action %>
    <%= f.text_field :then_action %><br>
    <%= f.label :user_device_id%>
    <%= f.text_field :user_device_id %><br>
    <%= f.submit 'Create Automation' %>
<% end %>