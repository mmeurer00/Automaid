<center>
    <div class="card" style="width: 20rem;">
    <div class="card-body">
        <h1> <%=@automation.name %> </h1>
        <p> Time: <%= @automation.if_action %> </p> 
        <p> Action: <%= @automation.then_action %> </p>
        <p> Device: <%= @automation.device.name %> </p>
        <br>
        <%= link_to "Edit", edit_device_automation_path(@automation.device, @automation)%><br>
        <br>
        <%= button_to "DELETE AUTOMATION", device_automation_path(@automation.device, @automation), method: "delete" %>
        <br>
        <%= link_to "All #{@automation.room.name} Automations", room_path(@automation.room) %><br>
        <br>
        <%= link_to "Back to #{@device.name}", device_path(@device) %>
    </div>
    </div>
</center>
