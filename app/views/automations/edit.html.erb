<h1>Update Automation</h1>
<%= form_with(model: [:device, @automation]) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :if_action %>
    <%= f.text_field :if_action %><br>
    <%= f.label :then_action %>
    <%= f.text_field :then_action %><br>
    <%= f.label :room_name %>
    <%= f.text_field :room_name %><br>
    <%= f.submit 'Update Automation' %>
<% end %>
<br>
<%= button_to "DELETE AUTOMATION", device_automation_path(@automation), method: "delete" %>