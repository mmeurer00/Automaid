<center>
    <% if !@automations.empty? %>
    <h3> Automations for All Devices </h3>
    <br>
    <% @automations.each do |automation| %>
        <div class="card" style="width: 20rem;">
        <div class="card-body">
        <h4> <%= link_to automation.name,  device_automation_path(automation.device_id, automation) %> </h4>
        </div>
        </div>
        <br>
    <% end %>
    <% else %>
    <h5> There are currently no automations. <h5>
    <% end %>
</center>