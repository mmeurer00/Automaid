
<% flash.each do |type, msg| %>
    <div class="alert alert-info">
        <%= msg %>
        <%= render partial: 'errors/errors', locals: {model: @user} %>
    </div>
<% end %>
    <center>
    <br>
    <div class="fancy-text">
    <div class="card-one" style="width: 20rem;">
    <div class="card-body">
        <div class="custom-title"> Sign Up </div>
        <%= form_with(model: @user, url: signup_path)  do |f|%>
            <%= f.label :name %>
            <%= f.text_field :name %><br>
            <%= f.label :email %>
            <%= f.text_field :email %><br>
            <%= f.label :password %>
            <%= f.password_field :password %><br>
            <br>
            <%= f.submit "Sign Up" %>
        <% end %>
<br>
<p> Sign up with Google Instead. 
<!----- making post request instead of get because we are using csrf protection ----->
<%= button_to 'Google Sign up', '/auth/google_oauth2' %> </p>

 Have an account? <%= link_to 'Login.', login_path, class: 'my-btn-sm'%>  
</div>
</div>
</div>
</center>
