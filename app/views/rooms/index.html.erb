<center>
<div class= "custom-title"> My Home </div>

<% if !@rooms.empty? %>
<%= link_to('Indoor Rooms', filter_by_location_path, class: "btn btn-outline-light text-dark")%>
<br>
<br>
    <% @rooms.each do |room| %>
        <div class="card" style="width: 18rem;">
        <div class="card-body">
        <%= link_to(room.name, room_path(room), class: "btn btn-outline-light text-dark")%>
        </div>
        </div>
        <br>
    <% end%>
<% else %>
    <div class="card" style="width: 30rem;">
    <div class="card-body">
    <p> You currently have no rooms. Create your first <%= link_to 'Room', new_room_path%>.</p>
<% end %>
</center>