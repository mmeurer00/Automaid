<center>
<div class="fancy-text">
    <div class="card" style="width: 20rem;">
    <div class="card-body">
        <div class= "custom-title">
            <%= @room.name %>
        </div>
        <% if @room.indoor == true %>
            <p> Indoor </p>
        <% else %>
            <p> Outdoor </p>
        <% end %>
        <%= link_to "Edit", edit_room_path(@room), style: "text-decoration:none"%>
        <%= button_to "Delete", room_path(@room), method: "delete", style: "text-decoration:none"%>
    </div>
    </div>
    <br>
    <br>
    <% if !@room.automations.empty? %>
        <h5> Automations for <%= @room.name %>: </h5>
        <% @room.automations.each do |automation|%>
            <div class="card" style="width: 20rem;">
            <div class="card-body">
                <p> <%= link_to automation.name,  device_automation_path(automation.device_id, automation)%> </p>
            </div>
            </div>
        <% end %>
    <% else %>
        <div class="card-body">
        <div class="card" style="width: 30rem;">
        <br>
            <h5> Looks like this room has no automations! Select a device and <%= link_to "create new automation", devices_path %>. </h5>
        <br>
        </div>
        </div>
    <% end %>
</div>
</center>