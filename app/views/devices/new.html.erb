<% flash.each do |type, msg| %>
    <div class="alert alert-info">
        <%= msg %>
        <%= render partial: 'errors/errors', locals: {model: @device} %>
    </div>
<% end %>
<h1> New Device </h1>
<%= form_for(@device) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :brand %>
    <%= f.text_field :brand %><br>
    <%= f.label :model %>
    <%= f.text_field :model %><br>
    <%= f.label :description %>
    <%= f.text_field :description %><br>
    <%= f.label :quantity %>
    <%= f.text_field :quantity %><br>
    <%= f.submit 'Create Device' %>
<% end %>

