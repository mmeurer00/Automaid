<h1> <%= @device.name %> </h1>

<p> Model: <%= @device.model %> </p>
<p> Description: <%= @device.description %> </p>
<p> Brand: <%= @device.brand %> </p>
<p> Quantity: <%= @device.quantity %> </p>
<h3> Automations for <%= @device.name %> </h3>
<% if !@device.automations.empty? %>
    <% @device.automations.each do |automation| %> 
        <%= link_to automation.name, device_automation_path(@device, automation)%>
        <br>
    <%end %>
<% else %>
    <p> You currently have no automations for this device. </p>
<% end %>
<br>
<%= link_to 'New Automation', new_device_automation_path(@device) %>
<br>
<%= link_to 'All Devices', devices_path %>